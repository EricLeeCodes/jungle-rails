<h1> Admin Categories </h1>


<div class="well">
    <%= link_to '+ New Category', new_admin_category_path, class: 'btn btn-info' %>
  </div>

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Categories</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <th scope="row"><%= category.id %></th>
         <td><%= category.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>